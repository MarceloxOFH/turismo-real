        <Label x:Name="lblNombreCargo" Content="Cargo" HorizontalAlignment="Left" Margin="39,118,0,0" VerticalAlignment="Top" Width="192" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="lblDescripcion" Content="Descripcion" HorizontalAlignment="Left" Margin="39,185,0,0" VerticalAlignment="Top" Width="192" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="tbCargoNombre" HorizontalAlignment="Left" Margin="135,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" FontWeight="Bold"/>
