<Window x:Class="Turismo.InventarioDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turismo"
        mc:Ignorable="d"
        Title="Ver Inventario Departamento" Height="480" Width="870">
    <Grid>
        <Label Content="Inventario" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="311" FontSize="24" FontWeight="Bold"/>
        <DataGrid x:Name="dgInventario" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="32,159,45,87"/>
        <Button Content="Agregar Objeto" HorizontalAlignment="Left" Margin="34,394,0,0" VerticalAlignment="Top" Width="101"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="149,394,0,0" VerticalAlignment="Top" Width="101"/>
        <Button Content="Actualizar" HorizontalAlignment="Left" Margin="264,394,0,0" VerticalAlignment="Top" Width="101"/>
        <Label Content="Id Departamento:" HorizontalAlignment="Left" Margin="34,87,0,0" VerticalAlignment="Top" Width="178" FontSize="16"/>
        <Label Content="Nombre Departamento:" HorizontalAlignment="Left" Margin="34,118,0,0" VerticalAlignment="Top" Width="178" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="217,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="217,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
