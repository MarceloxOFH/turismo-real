<mah:MetroWindow x:Class="Turismo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turismo"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450" Icon="Pictures/icon.png">
    <Grid>
        <TextBox x:Name="tbUsuario" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Margin="0,222,0,0" Text="juanperez" FontWeight="Bold"/>
        <Button x:Name="BtnIngresar" Content="Ingresar" HorizontalAlignment="Center" Margin="0,345,0,0" VerticalAlignment="Top" Width="78" Click="BtnIngresar_Click" Background="#FFF1E06C"/>
        <Label Content="Usuario:" HorizontalAlignment="Left" Margin="151,196,0,0" VerticalAlignment="Top" Width="67" FontWeight="Bold"/>
        <Label Content="Contraseña:" HorizontalAlignment="Left" Margin="151,263,0,0" VerticalAlignment="Top" Width="88" FontWeight="Bold"/>
        <Image Margin="151,18,151,266" Source="/index.jpg" Stretch="Fill"/>
        <PasswordBox x:Name="pwContrasena" HorizontalAlignment="Center" Margin="0,289,0,0" VerticalAlignment="Top" Width="148" Password="123"/>

    </Grid>
</mah:MetroWindow>
